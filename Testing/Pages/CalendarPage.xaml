<Page x:Class="Testing.Pages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Testing.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalendarPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="81*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <StackPanel HorizontalAlignment="Center">
                <Calendar Margin="5">
                    
                </Calendar>
                <TextBlock Text="Напоминание" Margin="5"/>
                <TextBox x:Name="ReminderTb" Margin="5" Width="200" Height="150"/>
                <Button x:Name="SaveBtn" Margin="5" Content="Записать"/>
            </StackPanel>
        </StackPanel>
       
    </Grid>
</Page>
